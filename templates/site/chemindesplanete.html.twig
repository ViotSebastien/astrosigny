<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Astronomie{% endblock %}</title>
        {% block stylesheets %}
          <link rel="stylesheet" href="{{asset('build/css/app.css')}}">
        {% endblock %}
        {% block javascripts %}
          <script src="{{ asset('build/js/app.js') }}"></script>
        {% endblock %}
    </head>
    {% block header %}
      <header>
      <div id="sidebar">
          {% include 'exsite/menus.html.twig' %}
      </div>
      </header>
    {% endblock %}
    {% block body %}
      <body>
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="{{asset('build/images/chemin.jpg')}}" alt="Carte chemin">
            <div class="card-body">
              <p class="card-text">Carte Circuit "Chemin des Planètes"</p>
            </div>
        </div>
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="{{asset('build/images/prosp01.jpg')}}" alt="Carte chemin explication">
            <div class="card-body">
              <p class="card-text">Fiche d'explication du chemin des planétes</p>
            </div>
        </div>
       </body>
    {% endblock %}
    {% block footer %}
    <footer class="mainfooter" role="contentinfo">
      {% include 'exsite/footer.html.twig' %}
    </footer>
    {% endblock %}
</html>
